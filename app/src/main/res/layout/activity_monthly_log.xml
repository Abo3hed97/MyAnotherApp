<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MonthlyLog">

    <TextView
        android:id="@+id/DLMN"
        android:layout_width="378dp"
        android:layout_height="57dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Name"
        android:textColor="@color/design_default_color_primary"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listofdays"
        android:layout_width="202dp"
        android:layout_height="394dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

    </ListView>

    <Button
        android:id="@+id/prevoiusMonth"
        android:layout_width="96dp"
        android:layout_height="34dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:text="prevoius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nextMonth" />

    <Button
        android:id="@+id/nextMonth"
        android:layout_width="96dp"
        android:layout_height="34dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="50dp"
        android:text="next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="96dp"
        android:layout_height="34dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:onClick="monthlyTask"
        android:text="Task"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prevoiusMonth" />


</android.support.constraint.ConstraintLayout>